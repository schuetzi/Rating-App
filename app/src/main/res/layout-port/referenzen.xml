<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_portrait"
    android:orientation="horizontal"
    android:weightSum="1">


    <ViewFlipper
        android:id="@+id/referenzen_view_flipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|bottom|end"
                android:orientation="vertical"
                android:layout_weight="1">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="100dp"
                android:layout_weight="0.35"
                android:gravity="center">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/referenzen_first_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:maxHeight="300dp"
                        android:maxWidth="600dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ofen" />

                    <TextView
                        android:id="@+id/referenzen_first_page_pic_titel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="20dp"
                        android:text="@string/handling_var1_titel"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/referenzen_first_page_pic_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:text="@string/handling_var1_text"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/referenzen_first_page_first_bullet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:maxHeight="15dp"
                            android:maxWidth="15dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/bullethole"
                            android:layout_marginEnd="7dp" />

                        <ImageView
                            android:id="@+id/referenzen_first_page_sec_bullet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:maxHeight="15dp"
                            android:maxWidth="15dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/bullet"
                            android:layout_marginEnd="7dp" />

                        <ImageView
                            android:id="@+id/referenzen_first_page_third_bullet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:maxHeight="15dp"
                            android:maxWidth="15dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/bullet" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="20dp"
                        android:paddingLeft="20dp"
                        android:gravity="left|bottom">

                        <Button
                            android:id="@+id/referenzen_first_button_zurueck"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:background="@drawable/button"
                            android:shadowColor="#A8A8A8"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="5"
                            android:text="@string/handling_zurueck"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center|center_horizontal"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/referenzen_first_page_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:adjustViewBounds="true"
                        android:maxHeight="90dp"
                        android:maxWidth="90dp"
                        android:scaleType="fitCenter"
                        android:background="@android:color/transparent"
                        android:src="@drawable/next" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:gravity="left|center|center_horizontal"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_horizontal"
                    android:orientation="vertical"
                    android:gravity="center|center_horizontal">

                    <ImageView
                        android:id="@+id/referenzen_sec_page_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:adjustViewBounds="true"
                        android:maxHeight="90dp"
                        android:maxWidth="90dp"
                        android:scaleType="fitCenter"
                        android:background="@android:color/transparent"
                        android:src="@drawable/back" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="100dp"
                android:layout_weight="0.35"
                android:gravity="center">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/referenzen_sec_page_sec_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:maxHeight="300dp"
                        android:maxWidth="600dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ofen" />

                    <TextView
                        android:id="@+id/referenzen_sec_page_sec_pic_titel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="20dp"
                        android:text="@string/handling_var2_titel"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/referenzen_sec_page_sec_pic_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:text="@string/handling_var2_text"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/referenzen_sec_page_first_bullet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:maxHeight="15dp"
                            android:maxWidth="15dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/bullet"
                            android:layout_marginEnd="7dp" />

                        <ImageView
                            android:id="@+id/referenzen_sec_page_sec_bullet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:maxHeight="15dp"
                            android:maxWidth="15dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/bullethole"
                            android:layout_marginEnd="7dp" />

                        <ImageView
                            android:id="@+id/referenzen_sec_page_third_bullet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:maxHeight="15dp"
                            android:maxWidth="15dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/bullet" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:layout_gravity="left|center_horizontal"
                        android:paddingLeft="20dp"
                        android:paddingBottom="20dp" >

                        <Button
                            android:id="@+id/referenzen_sec_page_button_zurueck"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:background="@drawable/button"
                            android:shadowColor="#A8A8A8"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="5"
                            android:text="@string/handling_zurueck"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center|center_horizontal"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/referenzen_sec_page_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:adjustViewBounds="true"
                        android:maxHeight="90dp"
                        android:maxWidth="90dp"
                        android:scaleType="fitCenter"
                        android:background="@android:color/transparent"
                        android:src="@drawable/next" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:gravity="left|center|center_horizontal"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_horizontal"
                    android:orientation="vertical"
                    android:gravity="center|center_horizontal">

                    <ImageView
                        android:id="@+id/referenzen_third_page_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:adjustViewBounds="true"
                        android:maxHeight="90dp"
                        android:maxWidth="90dp"
                        android:scaleType="fitCenter"
                        android:background="@android:color/transparent"
                        android:src="@drawable/back" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="100dp"
                android:layout_weight="0.35">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/referenzen_third_page_third_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:maxHeight="300dp"
                        android:maxWidth="600dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ofen" />

                    <TextView
                        android:id="@+id/referenzen_third_page_pic_titel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="20dp"
                        android:text="@string/handling_var3_titel"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/referenzen_third_page_pic_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:text="@string/handling_var3_text"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/referenzen_third_page_first_bullet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:maxHeight="15dp"
                            android:maxWidth="15dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/bullet"
                            android:layout_marginEnd="7dp" />

                        <ImageView
                            android:id="@+id/referenzen_third_page_sec_bullet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:maxHeight="15dp"
                            android:maxWidth="15dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/bullet"
                            android:layout_marginEnd="7dp" />

                        <ImageView
                            android:id="@+id/referenzen_third_page_third_bullet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:maxHeight="15dp"
                            android:maxWidth="15dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/bullethole" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:layout_gravity="left|center_horizontal"
                        android:paddingLeft="20dp"
                        android:paddingBottom="20dp" >

                        <Button
                            android:id="@+id/referenzen_third_page_button_zurueck"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:background="@drawable/button"
                            android:shadowColor="#A8A8A8"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="5"
                            android:text="@string/handling_zurueck"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center|center_horizontal"
                android:orientation="vertical"
                android:layout_weight="1">

            </LinearLayout>
        </LinearLayout>

    </ViewFlipper>
</LinearLayout>
