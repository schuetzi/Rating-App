<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background_portrait"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingStart="75dp"
    android:paddingTop="135dp">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_width="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ButtonSorteDetail"
            android:layout_height="225dp"
            android:layout_width="225dp"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <ImageView
                android:layout_height="68dp"
                android:layout_marginEnd="15dp"
                android:layout_width="52dp"
                android:src="@drawable/ohnegen" />

            <ImageView
                android:layout_height="34dp"
                android:layout_marginTop="15dp"
                android:layout_width="75dp"
                android:src="@drawable/ama" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_height="30dp"
            android:layout_width="match_parent"
            android:text="Beschreibung"
            android:textColor="#000"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/SorteBeschreibung"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingEnd="75dp"
            android:lineSpacingExtra="7dp"
            android:textColor="#000"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="275dp"
                android:orientation="vertical">

                <TextView
                    android:layout_height="25dp"
                    android:layout_marginTop="25dp"
                    android:layout_width="wrap_content"
                    android:text="Meine Bewertung:"
                    android:textColor="#000"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/RatingBarDetail"
                    android:isIndicator="false"
                    android:layout_gravity="left"
                    android:layout_height="90dp"
                    android:layout_marginStart="-120dp"
                    android:layout_marginTop="-20dp"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:stepSize="1"
                    style="@style/RatingBar" />

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

                <LinearLayout
                    android:layout_height="48dp"
                    android:layout_width="222dp">

                    <ImageButton
                        android:background="@android:color/transparent"
                        android:id="@+id/fertigVoting"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:scaleType="fitCenter"
                        android:src="@drawable/button_fertig" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>