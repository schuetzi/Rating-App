<resources>

    <style name="AppTheme" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen">
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="ButtonBarContainer">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:isIndicator">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2.2</item>
        <item name="android:layout_width">225dp</item>
        <item name="android:progressDrawable">@drawable/ratingbar</item>
        <item name="android:scaleX">0.35</item>
        <item name="android:scaleY">0.35</item>
    </style>

    <style name="VotingButton">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">-10dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="herkunft_bauern_name">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#723915</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="herkunft_bauern_ort">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#723915</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="handling_titel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="handling_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="handling_bullet">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:maxHeight">15dp</item>
        <item name="android:maxWidth">15dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_marginEnd">7dp</item>
    </style>

    <style name="handling_pic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="handling_next">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:maxHeight">90dp</item>
        <item name="android:maxWidth">90dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="handling_back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:maxHeight">90dp</item>
        <item name="android:maxWidth">90dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="herkunft_bauern_pic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:maxHeight">200dp</item>
        <item name="android:maxWidth">200dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="homescreen_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:maxHeight">220dp</item>
        <item name="android:maxWidth">220dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>